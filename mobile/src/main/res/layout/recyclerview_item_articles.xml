<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/default_margin_x2"
            app:layout_constraintRight_toLeftOf="@+id/article_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >
        <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textStyle="bold"
                android:maxLines="2"
                android:textSize="@dimen/text_size_medium"
                android:layout_marginBottom="@dimen/default_margin"
                tools:text="TITLE TEXT" />

        <TextView
                android:id="@+id/article_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Text text text text text text text text"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <ImageView
            android:id="@+id/article_image"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:contentDescription="@string/source_logo_description"
            android:adjustViewBounds="true"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


    <!--<Button-->
